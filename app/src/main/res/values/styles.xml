<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GlobalH1">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/mulibold</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/mulilight</item>
        <item name="android:lineHeight">21sp</item>
    </style>

</resources>
