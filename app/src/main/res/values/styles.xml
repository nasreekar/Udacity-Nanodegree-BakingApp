<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GlobalH1">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/mulibold</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/mulilight</item>
        <item name="android:lineHeight">21sp</item>
    </style>

    <style name="BodySmall">
        <item name="android:fontFamily">@font/itcavantgardestd_bk</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="StepsItemShortDescription">
        <item name="android:fontFamily">@font/itcavantgardestd_bk</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FancyLarge">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineSpacingExtra">-4sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/kautivacyrillicblack</item>
    </style>

</resources>
